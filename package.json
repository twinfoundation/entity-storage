{
	"name": "@twin.org/entity-storage",
	"version": "0.0.1-next.16",
	"description": "Entity Storage",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/entity-storage.git"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"private": true,
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dist": "node ./scripts/workspaces.mjs dist",
		"format": "prettier --config .prettierrc --write .",
		"lint:format": "prettier --config .prettierrc --check .",
		"lint:code": "eslint . --ext .js,.mjs,.ts",
		"lint:markdown": "markdownlint **/*.md --ignore **/node_modules/** --ignore **/docs/reference/**",
		"lint:spell": "cspell ** --no-progress",
		"lint": "npm run lint:format && npm run lint:code && npm run lint:markdown && npm run lint:spell"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "7.13.1",
		"cspell": "8.17.2",
		"eslint": "8.57.0",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-header": "3.1.1",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-jsdoc": "50.6.2",
		"eslint-plugin-prettier": "5.2.2",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-unicorn": "56.0.1",
		"eslint-plugin-unused-imports": "3.2.0",
		"fast-glob": "3.3.3",
		"markdownlint-cli": "0.43.0",
		"prettier": "3.4.2"
	},
	"workspaces": [
		"packages/entity-storage-models",
		"packages/entity-storage-connector-memory",
		"packages/entity-storage-service",
		"packages/entity-storage-rest-client",
		"packages/entity-storage-connector-file",
		"packages/entity-storage-connector-scylladb",
		"packages/entity-storage-connector-dynamodb",
		"packages/entity-storage-connector-gcp-firestore",
		"packages/entity-storage-connector-cosmosdb",
		"packages/entity-storage-connector-mysql",
		"packages/entity-storage-connector-mongodb"
	],
	"type": "module"
}
